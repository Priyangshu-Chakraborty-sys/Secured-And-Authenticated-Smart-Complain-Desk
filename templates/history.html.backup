                                            </button>                                     <button class="btn btn-outline-secondary btn-sm copy-hash-btn" 
                                                    data-hash="{{ complaint['Transaction Hash'] }}">
                                                üìã Copy Hash
                                            </button>ol-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2>üìú My Complaint History</h2>
                    <p class="text-muted mb-0">All complaints submitted from your wallet address</p>
                </div>
                <div>
                    <span class="badge bg-primary fs-6">{{ complaints|length }} Total Complaints</span>
                </div>
            </div>
            
            <!-- Wallet Info -->
            <div class="alert alert-info">
                <div class="d-flex align-items-center">
                    <i class="fas fa-wallet fa-lg me-3"></i>
                    <div class="flex-grow-1">
                        <strong>Connected Wallet:</strong>
                        <code class="wallet-address ms-2">{{ wallet_address }}</code>
                        {% if network_info %}
                        <br>
                        <small class="text-muted">
                            <strong>Network:</strong> {{ network_info.network_name }} 
                            {% if network_info.explorer_url %}
                            | <a href="{{ network_info.explorer_url }}" target="_blank" class="text-decoration-none">
                                üîç View Explorer
                            </a>
                            {% endif %}
                        </small>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>

    {% if complaints %}
        <!-- Complaints List -->
        <div class="row">
            {% for complaint in complaints %}
            <div class="col-12 mb-3">
                <div class="card fade-in" style="animation-delay: {{ loop.index0 * 0.1 }}s;">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="mb-0">
                                <i class="fas fa-file-alt me-2"></i>
                                Reference: <code>{{ complaint["Reference No"] }}</code>
                            </h6>
                            <small class="text-muted">{{ complaint.get("Department", "Unknown Department") }}</small>
                        </div>
                        <div class="text-end">
                            {% set status = complaint.get("Status", "Unknown") %}
                            {% if status == "Submitted" %}
                                <span class="badge bg-info">{{ status }}</span>
                            {% elif status == "Processing" %}
                                <span class="badge bg-warning">{{ status }}</span>
                            {% elif status == "Resolved" %}
                                <span class="badge bg-success">{{ status }}</span>
                            {% elif status == "Rejected" %}
                                <span class="badge bg-danger">{{ status }}</span>
                            {% else %}
                                <span class="badge bg-secondary">{{ status }}</span>
                            {% endif %}
                            <br>
                            <small class="text-muted">{{ complaint.get("Date", "Unknown Date") }}</small>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-8">
                                <h6 class="text-primary">Complaint Details</h6>
                                {% if complaint.get("Name") != "Blockchain Record" %}
                                    <p class="mb-2"><strong>Name:</strong> {{ complaint.get("Name", "N/A") }}</p>
                                    <p class="mb-2"><strong>Email:</strong> {{ complaint.get("Email", "N/A") }}</p>
                                    <div class="complaint-text p-3 bg-light rounded">
                                        <strong>Description:</strong><br>
                                        {{ complaint.get("Complaint", "No description available") }}
                                    </div>
                                {% else %}
                                    <div class="alert alert-warning">
                                        <strong>Blockchain Record:</strong> Detailed information is stored on the blockchain. 
                                        Use the track feature to view more details.
                                    </div>
                                {% endif %}
                            </div>
                            <div class="col-md-4">
                                <h6 class="text-success">Blockchain Status</h6>
                                {% if complaint.get("Blockchain Status") == "Success" %}
                                    <p class="text-success mb-2">
                                        <i class="fas fa-check-circle me-1"></i>‚úÖ Verified on Blockchain
                                    </p>
                                {% else %}
                                    <p class="text-warning mb-2">
                                        <i class="fas fa-exclamation-triangle me-1"></i>‚ö†Ô∏è Blockchain: {{ complaint.get("Blockchain Status", "Unknown") }}
                                    </p>
                                {% endif %}
                                
                                {% if complaint.get("Transaction Hash") and complaint["Transaction Hash"] != "N/A" %}
                                    <div class="mt-3 p-3 bg-light rounded border-start border-success border-3">
                                        <p class="mb-2"><strong>üîó Blockchain Transaction:</strong></p>
                                        <div class="mb-2">
                                            <small class="font-monospace text-break d-block mb-2">{{ complaint["Transaction Hash"] }}</small>
                                        </div>
                                        <div class="d-flex gap-2">
                                            {% if network_info and network_info.explorer_url %}
                                            <a href="{{ network_info.explorer_url }}/tx/{{ complaint['Transaction Hash'] }}" 
                                               target="_blank" class="btn btn-outline-primary btn-sm">
                                                üîç View on {{ network_info.network_name.split()[0] }} Explorer
                                            </a>
                                            {% else %}
                                            <a href="https://etherscan.io/tx/{{ complaint['Transaction Hash'] }}" 
                                               target="_blank" class="btn btn-outline-primary btn-sm">
                                                üîç View on Etherscan
                                            </a>
                                            {% endif %}
                                            <button class="btn btn-outline-secondary btn-sm" 
                                                    onclick="copyToClipboard('{{ complaint['Transaction Hash'] }}')">
                                                ÔøΩ Copy Hash
                                            </button>
                                        </div>
                                    </div>
                                {% elif complaint.get("Blockchain Status") == "Legacy" %}
                                    <div class="mt-3 p-3 bg-warning bg-opacity-25 rounded border-start border-warning border-3">
                                        <p class="mb-1"><strong>üìú Legacy Record:</strong></p>
                                        <small class="text-muted">This complaint was submitted before blockchain integration.</small>
                                    </div>
                                {% endif %}
                                
                                <div class="mt-3">
                                    <a href="{{ url_for('track_complaint') }}" 
                                       class="btn btn-primary btn-sm w-100 track-btn"
                                       data-ref="{{ complaint['Reference No'] }}">
                                        üìç Track Status
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
        
        <!-- Summary Statistics -->
        <div class="row mt-4">
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h4 class="text-primary">{{ complaints|length }}</h4>
                        <p class="mb-0">Total Complaints</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h4 class="text-info">{{ complaints|selectattr("Status", "equalto", "Submitted")|list|length }}</h4>
                        <p class="mb-0">Submitted</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h4 class="text-warning">{{ complaints|selectattr("Status", "equalto", "Processing")|list|length }}</h4>
                        <p class="mb-0">Processing</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h4 class="text-success">{{ complaints|selectattr("Status", "equalto", "Resolved")|list|length }}</h4>
                        <p class="mb-0">Resolved</p>
                    </div>
                </div>
            </div>
        </div>
        
    {% else %}
        <!-- No Complaints Found -->
        <div class="row justify-content-center">
            <div class="col-md-8 text-center">
                <div class="card">
                    <div class="card-body py-5">
                        <i class="fas fa-inbox fa-4x text-muted mb-4"></i>
