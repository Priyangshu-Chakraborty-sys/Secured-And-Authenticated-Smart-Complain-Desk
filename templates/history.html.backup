                        <p class="text-muted mb-4">
                            You haven't submitted any complaints yet from this wallet address, 
                            or your complaints are still being synchronized with the blockchain.
                        </p>
                        <div class="d-grid gap-2 d-md-block">
                            <a href="{{ url_for('home') }}" class="btn btn-primary btn-lg">
                                <i class="fas fa-plus me-2"></i>Submit Your First Complaint
                            </a>
                            <button class="btn btn-outline-secondary btn-lg refresh-btn">
                                <i class="fas fa-refresh me-2"></i>Refresh Page
                            </button>
                        </div>
                        
                        <!-- Troubleshooting Tips -->
                        <div class="mt-4 text-start">
                            <h6>Troubleshooting Tips:</h6>
                            <ul class="list-unstyled small text-muted">
                                <li>‚Ä¢ Make sure you're connected to the correct wallet</li>
                                <li>‚Ä¢ Check if you've submitted complaints from this address</li>
                                <li>‚Ä¢ Wait a few minutes for blockchain synchronization</li>
                                <li>‚Ä¢ Try refreshing the page</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
    
    <!-- Action Buttons -->
    <div class="text-center mt-4 mb-4">
        <a href="{{ url_for('home') }}" class="btn btn-primary me-2">
            <i class="fas fa-plus me-1"></i>üÜï New Complaint
        </a>
        <a href="{{ url_for('track_complaint') }}" class="btn btn-info me-2">
            <i class="fas fa-search me-1"></i>üìç Track Complaint
        </a>
        <button class="btn btn-outline-secondary print-btn">
            <i class="fas fa-print me-1"></i>üñ®Ô∏è Print History
        </button>
    </div>
</div>

<script>
function setTrackingNumber(refNo) {
    // Store the reference number in localStorage for the track page
    localStorage.setItem('trackingNumber', refNo);
}

function copyToClipboard(text, button) {
    // Copy transaction hash to clipboard
    navigator.clipboard.writeText(text).then(function() {
        // Show success message
        const originalText = button.innerHTML;
        button.innerHTML = '‚úÖ Copied!';
        button.classList.add('btn-success');
        button.classList.remove('btn-outline-secondary');
        
        setTimeout(function() {
            button.innerHTML = originalText;
            button.classList.remove('btn-success');
            button.classList.add('btn-outline-secondary');
        }, 2000);
    }).catch(function(err) {
        console.error('Failed to copy text: ', err);
        // Fallback for older browsers
        const textArea = document.createElement('textarea');
        textArea.value = text;
        document.body.appendChild(textArea);
        textArea.select();
        document.execCommand('copy');
        document.body.removeChild(textArea);
        
        const originalText = button.innerHTML;
        button.innerHTML = '‚úÖ Copied!';
        setTimeout(function() {
            button.innerHTML = originalText;
        }, 2000);
    });
}

// Auto-fill tracking number if coming from history
document.addEventListener('DOMContentLoaded', function() {
    const trackingNumber = localStorage.getItem('trackingNumber');
    if (trackingNumber && window.location.pathname.includes('track')) {
        const input = document.querySelector('input[name="ref_no"]');
        if (input) {
            input.value = trackingNumber;
            localStorage.removeItem('trackingNumber');
        }
    }
    
    // Add event listeners to copy buttons
    document.querySelectorAll('.copy-hash-btn').forEach(function(button) {
        button.addEventListener('click', function() {
            const hash = this.getAttribute('data-hash');
            copyToClipboard(hash, this);
        });
    });
    
    // Add event listeners to track buttons
    document.querySelectorAll('.track-btn').forEach(function(button) {
        button.addEventListener('click', function() {
            const refNo = this.getAttribute('data-ref');
            setTrackingNumber(refNo);
        });
    });
    
    // Add event listeners to refresh and print buttons
    const refreshBtn = document.querySelector('.refresh-btn');
    if (refreshBtn) {
        refreshBtn.addEventListener('click', function() {
            window.location.reload();
        });
    }
    
    const printBtn = document.querySelector('.print-btn');
    if (printBtn) {
        printBtn.addEventListener('click', function() {
            window.print();
        });
    }
});
</script>

<style>
